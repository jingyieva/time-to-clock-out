{
  "manifest_version": 3,
  "name": "你的下班提醒好朋友",
  "version": "0.2.0",
  "description": "超過設定的下班時間後，每隔一段時間提醒你收工。",
  "permissions": ["notifications", "alarms", "storage", "idle"],
  "host_permissions": ["https://cdn.jsdelivr.net/*"],
  "background": {
    "service_worker": "background.js"
  },
  "options_page": "options.html",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_title": "It's Time to CLOCK OUT!"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": [
        "./css/options.css"
      ]
    }
  ]
}